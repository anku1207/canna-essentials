<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="match_parent">
            <com.shopify.canna.view.widget.image.ShopifyDraweeView
                android:id="@+id/image"
                android:adjustViewBounds="true"
                style="@style/ShopifyDraweeView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:actualImageScaleType="fitXY"
                android:layout_weight="1"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearTitlePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textSize="13sp"
                            android:maxLines="3"
                            android:fontFamily="@font/sweetsanspromedium"
                            android:textAppearance="@style/Shopify.TitleText.Inverse"
                            tools:text="Product Title"
                            android:textColor="?android:attr/colorAccent"/>
                        <TextView
                            android:id="@+id/variant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="@font/sweetsansproregular"
                            android:textAppearance="@style/Shopify.SubTitleText.Inverse"
                            android:textColor="?android:attr/colorAccent"
                            tools:text="Small / Blue / Circle"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:fontFamily="@font/sweetsansproregular"
                            android:textAppearance="@style/Shopify.SubTitleText.Inverse"
                            android:textColor="?android:attr/colorAccent"
                            tools:text="$50.99" />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:id="@+id/quantity_layout"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/linearTitlePrice"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/quantity_title"
                            android:textColor="?android:attr/colorAccent"
                            android:fontFamily="@font/sweetsansproregular"
                            android:textAppearance="@style/Shopify.BodyText.Inverse"
                          />
                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/sweetsansproregular"
                            android:maxLines="1"
                            android:textAppearance="@style/Shopify.SubTitleText.Inverse"
                            android:textColor="?android:attr/colorAccent"
                            tools:text="100"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/edittext_round_border_redcolor">
                        <ImageButton
                            android:id="@+id/decrement_quantity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/white"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:src="@drawable/variant_decrease"
                            android:layout_weight="1"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/text_grey">
                        </View>
                        <ImageButton
                            android:id="@+id/increment_quantity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/white"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_weight="1"
                            android:src="@drawable/variant_increase" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#68818181"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </LinearLayout>
      </LinearLayout>




    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/default_padding_half"
        android:background="?android:attr/colorAccent"
        android:visibility="gone"
      />

</LinearLayout>